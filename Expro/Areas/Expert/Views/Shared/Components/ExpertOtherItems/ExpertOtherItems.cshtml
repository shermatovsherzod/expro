@model Expro.ViewModels.OtherItemsCountVM;
@{
    ViewData["Title"] = "ExpertDocuments";
}

<h6 class="text-cap small">@localizer["Others"]</h6>

<!-- List -->
<ul class="nav nav-sub nav-sm nav-tabs nav-list-y-2 mb-4">
    <li class="nav-item">
        <a class="nav-link " href="/Expert/Company">
            <i class="fas fa-check nav-icon"></i> @localizer["MyCompanies"]
        <span class="badge badge-soft-dark badge-pill nav-link-badge">@Model.CompaniesCount</span>
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link " href="/Expert/Vacancy">
            <i class="fas fa-check nav-icon"></i> @localizer["MyVacancies"]
        <span class="badge badge-soft-dark badge-pill nav-link-badge">@Model.VacanciesCount</span>
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link " href="/Expert/Resume">
            <i class="fas fa-check nav-icon"></i> @localizer["MyResumes"]
        <span class="badge badge-soft-dark badge-pill nav-link-badge">@Model.ResumesCount</span>
        </a>
    </li>
</ul>
<!-- End List -->