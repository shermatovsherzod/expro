@model Expro.ViewModels.Expert.ExpertShortInfoVM

<div class="d-none d-lg-block text-center mb-5">
    <div class="avatar avatar-xxl avatar-circle mb-3">
        <img class="avatar-img" src="@Model.Avatar?.Url" alt="Image Description">
        @if (Model.ExpertApproved)
        {
            <img class="avatar-status avatar-lg-status" src="~/lib/frontTheme/svg/illustrations/top-vendor.svg" alt="Фото эксперта" data-toggle="tooltip" data-placement="top" title="Эксперт подтвержден">
        }

    </div>

    <h4 class="card-title">@Model.FirstName @Model.LastName</h4>
    <p class="card-text font-size-1">@Model.Email</p>
</div>
