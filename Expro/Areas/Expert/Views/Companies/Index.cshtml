@model CompanyEditVM
@using Expro.ViewModels
@{
    Layout = "_Layout";
    ViewData["Title"] = "Компании";
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
}

<div class="row">
    <div class="col-md-12">
        @Html.ActionLink("Добавить компанию", "Create", "Companies", null, new { @class = "btn btn-primary" })        
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <br />
        <table class="table">
            <thead>
                <tr>
                    <th>Логотип</th>
                    <th>Название компании</th>
                    <th>Веб сайт</th>
                    <th>Телефон</th>
                    <th>Емейл</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @{
                    List<CompanyDetailsVM> _list = ViewData["companyListVM"] as List<CompanyDetailsVM>;
                }

                @foreach (var item in _list)
                {
                    <tr>
                        <td></td>
                        <td>@item.CompanyName</td>
                        <td>@item.WebSite</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.Email</td>
                        <td>
                            <a href="/Expert/Companies/Details/@item.ID"><i class="fas fa-eye"></i></a>
                            <a href="/Expert/Companies/Edit/@item.ID"><i class="fas fa-pencil-alt"></i></a>
                            <a href="/Expert/Companies/Delete/@item.ID"><i class="far fa-trash-alt"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts{

}
