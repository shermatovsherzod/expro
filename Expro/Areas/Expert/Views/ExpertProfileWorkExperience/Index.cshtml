@model Expro.ViewModels.ExpertProfileWorkExperienceEditVM

@{
    Layout = "_LayoutProfile";
    ViewData["Title"] = "Образование";
}

<div class="row">
    <div class="col-md-12">
        @if ((bool)ViewBag.Message)
        {
            <div class="alert alert-success" role="alert">
                Изменения сохранены
            </div>
        }
    </div>
</div>

<div class="row">
    <div class="col-md-9"></div>
    <div class="col-md-3">
        <button type="button" data-toggle="modal" class="btn btn-primary form-control" data-target="#modalwindow">Добавить опыт работы</button>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <br />
        <table class="table">
            <thead>
                <tr>
                    <th>Страна</th>
                    <th>Город</th>
                    <th>Место работы</th>
                    <th>Должность</th>
                    <th>Период</th>
                    <th>Диплом</th>
                    <th>Действие</th>
                </tr>
            </thead>

            <tbody>
                @{
                    List<Expro.ViewModels.ExpertProfileWorkExperienceDetailsVM> workExperiences = ViewData["workExperienceEducationListVM"] as List<Expro.ViewModels.ExpertProfileWorkExperienceDetailsVM>;
                }

                @foreach (var item in workExperiences)
                {
                    <tr>
                        <td>@item.Country</td>
                        <td>@item.City</td>
                        <td>@item.PlaceOfWork</td>
                        <td>@item.Position</td>
                        <td>@item.WorkPeriodFrom - @item.WorkPeriodTo</td>
                        <td></td>
                        <td><button class="btn btn-danger btndelete" data-cid="@item.ID">Удалить</button></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<!-- Modal -->
<div id="modalwindow" tabindex="-1" class="modal fade" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Добавить опыт работы</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <form asp-controller="ExpertProfileWorkExperience" asp-action="Index" data-ajax="true" data-ajax-method="POST">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-3">
                            <label>Страна</label>
                        </div>
                        <div class="col-md-9">
                            <p>
                                <select asp-for="@Model.CountryID"
                                        asp-items="@ViewData["country"] as IEnumerable<SelectListItem>"
                                        class="form-control">
                                    <option disabled selected>--- Выбрать страну ---</option>
                                </select>
                                <span asp-validation-for="@Model.CountryID" class="text-danger"></span>
                            </p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3">
                            <label asp-for="@Model.City"></label>
                        </div>
                        <div class="col-md-9">
                            <p>
                                <input asp-for="@Model.City" class="form-control" />
                                <span asp-validation-for="@Model.City"></span>
                            </p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3">
                            <label asp-for="@Model.PlaceOfWork"></label>
                        </div>
                        <div class="col-md-9">
                            <p>
                                <input asp-for="@Model.PlaceOfWork" class="form-control" />
                                <span asp-validation-for="@Model.PlaceOfWork"></span>
                            </p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3">
                            <label asp-for="@Model.Position"></label>
                        </div>
                        <div class="col-md-9">
                            <p>
                                <input asp-for="@Model.Position" class="form-control" />
                                <span asp-validation-for="@Model.Position"></span>
                            </p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3">
                            <label>Период</label>
                        </div>
                        <div class="col-md-9">
                            <div class="row">
                                <div class="col-md-6">
                                    <label asp-for="@Model.WorkPeriodFrom"></label>
                                </div>
                                <div class="col-md-6">
                                    <p>
                                        <input asp-for="@Model.WorkPeriodFrom" class="form-control" />
                                        <span asp-validation-for="@Model.WorkPeriodFrom"></span>
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label asp-for="@Model.WorkPeriodTo"></label>
                                </div>
                                <div class="col-md-6">
                                    <p>
                                        <input asp-for="@Model.WorkPeriodTo" class="form-control" />
                                        <span asp-validation-for="@Model.WorkPeriodTo"></span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Добавить</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Закрыть</button>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts{   
    <script>
        $(document).ready(function () {
            if ($('.validation-summary-errors').length) {
                $('#modalwindow').modal('show');
            }
        });

        $('.modal').on('hidden.bs.modal', function (e) {
            $(".modal-body input").val("");
            $('#CountryID').val('');
        });

        $(".modal").on('shown.bs.modal', function () {
            $(".modal-body input").val("");
            $('#CountryID').val('');
        });
    </script>

    <script>
        $('.btndelete').on('click', function () {
            if (confirm('Вы действительно хотите удалить запись?')) {
                var id = $(this).data("cid");
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("DeleteWorkExperience", "ExpertProfileWorkExperience")',
                    data:
                    {
                        id
                    },
                    success: function (data) {
                        document.location = '/Expert/ExpertProfileWorkExperience/Index';
                    },
                    error: function (data) {
                        alert("Error!");
                    },
                    complete: function (data) {
                    }
                });
            }
          });
    </script>

}
