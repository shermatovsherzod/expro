@model IEnumerable<Expro.ViewModels.SampleDocumentListItemForExpertVM>
@using Expro.ViewModels
@using Expro.Models.Enums

@{
    ViewData["Title"] = "Намунавий хужжатлар";
}

<h1>@ViewData["Title"]</h1>
<br />
<div class="row">
    <div class="col-12">
        <p><a href="/Expert/SampleDocument/CreateFree" class="btn btn-info">Хужжат яратиш</a></p>
        <p><a href="/Expert/SampleDocument/CreatePaid" class="btn btn-primary">Пуллик Хужжат яратиш</a></p>
    </div>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            @{
                var tmp = new SampleDocumentListItemForAdminVM();
            }
            <th>@Html.DisplayNameFor(m => tmp.Title)</th>
            <th>@Html.DisplayNameFor(m => tmp.Price)</th>
            <th>@Html.DisplayNameFor(m => tmp.Status)</th>
            <th>@Html.DisplayNameFor(m => tmp.DateModified)</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Price</td>
                @{
                    string alertClass = "alert ";
                    if (item.Status.ID == (int)DocumentStatusesEnum.WaitingForApproval)
                    { alertClass = "alert-warning"; }
                    else if (item.Status.ID == (int)DocumentStatusesEnum.Approved)
                    { alertClass = "alert-success"; }
                    else if (item.Status.ID == (int)DocumentStatusesEnum.Rejected)
                    { alertClass = "alert-danger"; }
                }
                <td class="@alertClass">
                    @item.Status.Name
                </td>
                <td>@item.DateModified</td>
                <td>
                    @{ 
                        string editAction = "EditFree";
                        if (item.PriceType == DocumentPriceTypesEnum.Paid)
                        { editAction = "EditPaid"; }
                    }
                    <a href="/Expert/SampleDocument/@editAction/@item.ID" class="btn btn-outline-primary">Открыть</a>
                </td>
            </tr>
        }
    </tbody>
</table>