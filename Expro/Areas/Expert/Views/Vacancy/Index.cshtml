@model VacancyEditVM
@using Expro.ViewModels
@{
    Layout = "_Layout";
    ViewData["Title"] = "Вакансии";
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
}

<div class="row">
    <div class="col-md-12">
        @Html.ActionLink("Добавить вакансию", "Create", "Vacancy", null, new { @class = "btn btn-primary" })
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <br />
        <table class="table">
            <thead>
                <tr>
                    <th>Название компании</th>
                    <th>Должность</th>
                    <th>Действия</th>

                </tr>
            </thead>
            <tbody>
                @{
                    List<VacancyDetailsVM> _list = ViewData["vacancyListVM"] as List<VacancyDetailsVM>;
                }

                @foreach (var item in _list)
                {
                    <tr>
                        <td>@item.Company</td>
                        <td>@item.Position</td>
                        <td>
                            <a href="/Expert/Vacancy/Details/@item.ID"><i class="fas fa-eye"></i></a>
                            <a href="/Expert/Vacancy/Edit/@item.ID"><i class="fas fa-pencil-alt"></i></a>
                            <a href="/Expert/Vacancy/Delete/@item.ID"><i class="far fa-trash-alt"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts{

}
