@model ResumeEditVM
@using Expro.ViewModels
@{
    Layout = "_Layout";
    ViewData["Title"] = "Резюме";
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
}

<div class="row">
    <div class="col-md-12">
        @Html.ActionLink("Добавить резюме", "Create", "Resume", null, new { @class = "btn btn-primary" })      
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <br />
        <table class="table">
            <thead>
                <tr>
                    <th>ФИО</th>
                    <th>Действия</th>

                </tr>
            </thead>
            <tbody>
                @{
                    List<ResumeDetailsVM> _list = ViewData["resumeListVM"] as List<ResumeDetailsVM>;
                }

                @foreach (var item in _list)
                {
                    <tr>
                        <td>@item.LastName @item.FirstName @item.PatronymicName </td>

                        <td>
                            <a href="/User/Resume/Details/@item.ID"><i class="fas fa-eye"></i></a>
                            <a href="/User/Resume/Edit/@item.ID"><i class="fas fa-pencil-alt"></i></a>
                            <a href="/User/Resume/Delete/@item.ID"><i class="far fa-trash-alt"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts{

}
