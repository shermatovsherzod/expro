@model Expro.ViewModels.SimpleUserDocumentsPurchasedCountVM;
@{
    ViewData["Title"] = "ExpertDocuments";
}

<h6 class="text-cap small">@localizer["PurchasedDocuments"]</h6>

<!-- List -->
<ul class="nav nav-sub nav-sm nav-tabs nav-list-y-2 mb-4">
    <li class="nav-item">
        <a class="nav-link " href="/User/Question">
            <i class="fas fa-check nav-icon"></i> @localizer["MyQuestions"]
        <span class="badge badge-soft-dark badge-pill nav-link-badge">@Model.MyQuestionsCount</span>
        </a>
    </li>

    <li class="nav-item">
        <a class="nav-link " href="/User/ArticleDocumentPurchased">
            <i class="fas fa-check nav-icon"></i> @localizer["PurchasedArticles"]
        <span class="badge badge-soft-dark badge-pill nav-link-badge">@Model.ArticleDocumentsCount</span>
        </a>
    </li>

    <li class="nav-item">
        <a class="nav-link " href="/User/SampleDocumentPurchased">
            <i class="fas fa-check nav-icon"></i> @localizer["PurchasedSampleDocuments"]
        <span class="badge badge-soft-dark badge-pill nav-link-badge">@Model.SampleDocumentsCount</span>
        </a>
    </li>

    <li class="nav-item">
        <a class="nav-link " href="/User/PracticeDocumentPurchased">
            <i class="fas fa-check nav-icon"></i> @localizer["PurchasedPracticeDocuments"]
        <span class="badge badge-soft-dark badge-pill nav-link-badge">@Model.PracticeDocumentsCount</span>
        </a>
    </li>
</ul>
<!-- End List -->