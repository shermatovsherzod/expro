<link href="~/lib/DataTables-1.10.22/datatables.css" rel="stylesheet" />

@section Scripts
{
    <script src="~/lib/DataTables-1.10.22/datatables.js"></script>
    <script>
        var table;

        $(document).ready(function () {
            table = $("table#list").DataTable({
                searching: false,
                ordering: false,
                processing: true,
                serverSide: true,
                lengthChange: false,
                scrollX: true,
                lengthChange: false,
                ajax:
                {
                    url: "/User/SampleDocument/Search",
                    type: "POST",
                    //contentType: "application/json",
                    datatype: "json",
                    data: function (d) {
                        //d.statusID = $("#statusDD").val();
                        d.priceType = $("#priceTypeDD").val();
                    },
                    //complete: function () {
                    //    StartLoadingImagesAsync();
                    //}
                },
                //columnDefs: [
                //    {
                //        "targets": [2],
                //        "visible": false,
                //    },
                //    //{
                //    //    "targets": [2],
                //    //    "visible": false
                //    //}
                //],
                columns: [
                    {
                        "data": 0, //"name": "statusId", "autoWidth": true,
                        "render": function (data, type, full, meta) { return '' + full.title + ''; }
                    },
                    {
                        "data": 1, //"name": "statusId", "autoWidth": true,
                        "render": function (data, type, full, meta) {
                            return '' + full.author.fullName + '';
                        }
                    },
                    {
                        "data": 2, //"name": "statusId", "autoWidth": true,
                        "render": function (data, type, full, meta) { return '' + full.datePublished + ''; }
                    },
                    {
                        "data": 3, //"name": "statusId", "autoWidth": true,
                        "render": function (data, type, full, meta) {
                            var html = "";
                            if (full.price != null)
                                html = "" + full.price;
                            return html;
                        }
                    },
                    {
                        "data": 4, //"name": "statusId", "autoWidth": true,
                        "render": function (data, type, full, meta)
                        {
                            var html = '<a href="/User/SampleDocument/Details/' + full.id + '" class="btn btn-primary" target="_blank">Открыть</a>';
                            return html;
                        }
                    }
                ]
            });

            $("#priceTypeDD").change(function () {
                table.draw();
            });
        });
    </script>
}