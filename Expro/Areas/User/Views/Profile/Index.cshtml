@model ProfileSimpleUserVM
@{
    ViewData["Title"] = "Профайл пользователя";
    <link href="~/css/userprofile.css" rel="stylesheet" />
    <link href="~/lib/Gijgo/gijgo.min.css" rel="stylesheet" />
    Layout = "_LayoutProfile";
}

<div class="container">
    <main role="main" class="pb-3">
        <div class="container emp-profile">
            <div class="row">
                <div class="col-md-4">
                    <div class="profile-img">
                        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS52y5aInsxSm31CvHOFHWujqUx_wWTS9iM6s7BAm21oEN_RiGoog" alt="" />
                        <div class="file btn btn-lg btn-primary">
                            Изменить
                            <input type="file" name="file" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="">
                                <p class="text-center"><a href="/Identity/Account/ChangePassword">Изменить пароль</a></p>
                                <br />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="profile-head">
                        <h5>
                            @Model.FirstName @Model.LastName
                        </h5>
                        <br />
                        <ul class="nav nav-tabs">
                            <li class="nav-item">
                                Основная информация
                            </li>
                        </ul>

                        <form id="maininfoform" asp-controller="Profile" asp-action="Index" data-ajax="true" data-ajax-mode="replace" data-ajax-method="POST">
                            <div asp-validation-summary="All" class="text-danger"></div>

                            @if (!String.IsNullOrEmpty(ViewBag.Message))
                            {
                                <div class="alert alert-success" role="alert">
                                    @ViewBag.Message
                                </div>
                            }

                            <div class="row">
                                <div class="col-md-6">
                                    <label asp-for="@Model.FirstName"></label>
                                </div>
                                <div class="col-md-6">
                                    <p>
                                        <input asp-for="@Model.FirstName" class="form-control" />
                                        <span asp-validation-for="@Model.FirstName"></span>
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label asp-for="@Model.LastName"></label>
                                </div>
                                <div class="col-md-6">
                                    <p>
                                        <input asp-for="@Model.LastName" class="form-control" />
                                        <span asp-validation-for="@Model.LastName"></span>
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label asp-for="@Model.PatronymicName"></label>
                                </div>
                                <div class="col-md-6">
                                    <p>
                                        <input asp-for="@Model.PatronymicName" class="form-control" />
                                        <span asp-validation-for="@Model.PatronymicName"></span>
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label asp-for="@Model.RegionID"></label>
                                </div>
                                <div class="col-md-6">
                                    <p>
                                        <select asp-for="@Model.RegionID"
                                                asp-items="@ViewData["regions"] as IEnumerable<SelectListItem>"
                                                class="form-control">
                                        </select>
                                        <span asp-validation-for="@Model.RegionID" class="text-danger"></span>
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label asp-for="@Model.CityID"></label>
                                </div>
                                <div class="col-md-6">
                                    <p>
                                        <select asp-for="@Model.CityID"
                                                asp-items="@ViewData["cities"] as IEnumerable<SelectListItem>"
                                                class="form-control">
                                            <option disabled>--- Выбрать город ---</option>
                                        </select>
                                        <span asp-validation-for="@Model.CityID" class="text-danger"></span>
                                    </p>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <label asp-for="@Model.DateOfBirth"></label>
                                </div>
                                <div class="col-md-6">
                                    <p>
                                        <input asp-for="@Model.DateOfBirth" class="form-control" onkeydown="event.preventDefault()" />
                                        <span asp-validation-for="@Model.DateOfBirth"></span>
                                    </p>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <label asp-for="@Model.GenderID"></label>
                                </div>
                                <div class="col-md-6">
                                    <p>
                                        <select asp-for="@Model.GenderID"
                                                asp-items="@ViewData["gender"] as IEnumerable<SelectListItem>"
                                                class="form-control">
                                        </select>
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 text-right">
                                    <button type="submit" class="btn btn-primary">Сохранить</button>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>

            </div>

            <hr />
        </div>
    </main>
</div>


@section Scripts
    {
    <script src="~/lib/Gijgo/gijgo.min.js"></script>
    <script src="~/lib/Gijgo/messages.ru-ru.js"></script>
    <script>
        $('#DateOfBirth').datepicker({
            uiLibrary: 'bootstrap4',
            format: 'dd.mm.yyyy',
            locale: 'ru-ru',
        });
    </script>

}