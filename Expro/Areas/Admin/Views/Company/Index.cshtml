@using Expro.ViewModels
@using Expro.Models.Enums

@{
    ViewData["Title"] = "Компании";  
}

<h1>@ViewData["Title"]</h1>
<br />

<div class="row">
    <div class="col-sm-4">
        Фильтр по статусу: <br />
        <select id="statusDD" asp-items="@ViewData["statuses"] as List<SelectListItem>" class="form-control">
            <option value="">Все</option>
        </select>      
        <br />
    </div>
</div>

<div id="tableBox">
    <div class="spinner-border spinner" style="display: none;"></div>
    <table id="list" width="100%">
        <thead>
            <tr>
                <th></th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
    <div class="spinner-border spinner" style="display: none;"></div>
</div>

<link href="~/lib/DataTables-1.10.22/datatables.css" rel="stylesheet" />

@section Scripts
{
    <script src="~/lib/DataTables-1.10.22/datatables.js"></script>
    <script>
        var table;

        $(document).ready(function () {
            table = $("table#list").DataTable({
                searching: false,
                ordering: false,
                processing: true,
                serverSide: true,
                lengthChange: false,
                scrollX: true,
                lengthChange: false,
                ajax:
                {
                    url: "/Admin/Company/Search",
                    type: "POST",
                    datatype: "json",
                    data: function (d) {
                        d.statusID = $("#statusDD").val();
                    },
                },
                columns: [
                    {
                        "data": 0, 
                        "render": function (data, type, full, meta) {
                            var html = '';
                            html += '<div class="card">';
                            html += '<div class="card-body">';
                            html += '<h4 class="card-title">Компания: ' + full.companyName + '</h4>';
                            html += '<p class="card-text">';
                            html += '<ul>';
                            html += '<li>Регион ' + full.region+'</li>';
                            html += '<li>Город ' + full.city+'</li>';                                          
                            html += '</ul>';                                        
                            html += '</p>';
                            html += '<a href="/Admin/Company/Details/' + full.id + '" class="card-link">Просмотр</a>';                                   
                            html += '</div>';
                            html += '</div>';

                            return html;
                        }
                    }
                ]
            });

            table
                .on('preDraw', function () {
                    $("#tableBox .spinner").show();
                })
                .on('draw.dt', function () {
                    $("#tableBox .spinner").hide();                    
                });

            $("#statusDD").change(function () {
                table.draw();
            });
        });
    </script>

}