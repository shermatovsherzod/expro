
@{
    ViewData["Title"] = "Index";
    <link href="~/lib/DataTables-1.10.22/datatables.css" rel="stylesheet" />

}



<div class="container">
    <br />
    <div style="width:90%; margin:0 auto;">
        <table id="expertstable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Фамилия</th>
                    <th>Имя</th>
                    <th>Дата регистрации</th>
                    <th>Просмотреть профайл</th>
                </tr>
            </thead>
        </table>
    </div>
</div>


@section Scripts
{
    <script src="~/lib/DataTables-1.10.22/datatables.js"></script>
    <script>
        $(document).ready(function () {
            $("#expertstable").DataTable({
                "pageLength": 5,
                "processing": true,
                "serverSide": true,
                "filter": true,
                "ajax": {
                    "url": "/Admin/ExpertsList/GetExperts",
                    "type": "POST",
                    "datatype": "json"
                },
                "columnDefs": [{
                    "targets": [0],
                    "visible": false,
                    "searchable": false
                }],
                "columns": [
                    { "data": "id", "name": "Id", "autoWidth": true },                   
                    { "data": "lastName", "name": "LastName", "autoWidth": true },
                    { "data": "firstName", "name": "FirstName", "autoWidth": true },
                    { "data": "dateRegistered", "name": "DateRegistered", "autoWidth": true },                   
                    {
                        "render": function (data, type, row) {
                            return "<a href='/Admin/ExpertsList/ExpertDetails/" + row.id + "' class='btn btn-info'); >Просмотреть</a>";
                        }
                    },
                ],
                "language": {
                    "url": "../lib/DataTables-1.10.22/Russian.json"
                }
            });
        });
    </script>
}