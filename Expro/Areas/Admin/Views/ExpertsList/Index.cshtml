@using Expro.ViewModels
@using Expro.Models.Enums

@{
    ViewData["Title"] = "Эксперты";
}
@section CustomFrontStyles{
    <link rel="stylesheet" href="~/lib/frontTheme/vendor/select2/dist/css/select2.min.css">
}

<h4>@ViewData["Title"]</h4>
<br />


<div class="form-group">
    <label class="input-label" for="statusDD">Фильтр по статусу:</label>

    <select id="statusDD" name="statusDD" asp-items="@ViewData["statuses"] as List<SelectListItem>" class="js-custom-select custom-select form-control">
        <option value="">@localizer["All"]</option>
    </select>
    <br />
</div>



<div id="tableBox">
    <div class="spinner-border spinner" style="display: none;"></div>
    <div class="table-responsive">
        <table id="list" class="table table-borderless table-thead-bordered table-nowrap table-align-middle" width="100%">
            <thead class="thead-light">
                <tr>
                    <th>Name</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
    <div class="spinner-border spinner" style="display: none;"></div>
</div>

<link href="~/lib/DataTables-1.10.22/datatables.css" rel="stylesheet" />

@section Scripts
{
    <script src="~/lib/frontTheme/vendor/select2/dist/js/select2.full.min.js"></script>
    <script src="~/lib/DataTables-1.10.22/datatables.js"></script>
    <script>
        var table;

        $(document).ready(function () {
            table = $("table#list").DataTable({
                searching: false,
                ordering: false,
                processing: true,
                serverSide: true,
                lengthChange: false,
                scrollX: true,
                lengthChange: false,
                ajax:
                {
                    url: "/Admin/ExpertsList/Search",
                    type: "POST",
                    datatype: "json",
                    data: function (d) {
                        d.statusID = $("#statusDD").val();
                    },
                },
                columns: [
                    {
                        "data": 0,
                        "render": function (data, type, full, meta) {

                            //html += '<a href="/Admin/ExpertsList/Details/' + full.id + '" class="card-link">Просмотр</a>';

                            var html = '';
                            html += '<div class="media align-items-center">';
                            html += '<img class="avatar avatar-sm avatar-circle mr-3" src="/lib/frontTheme/img/100x100/img1.jpg" alt="Image Description">';

                            html += '<div class="media-body">';
                            html += '<a class="d-inline-block text-dark" href="#">';
                            html += '<h6 class="text-hover-primary mb-0">' + full.firstName + ' ' + full.lastName + ' <img class="avatar avatar-xss ml-1" src="/lib/frontTheme/svg/illustrations/top-vendor.svg" alt="Image Description" data-toggle="tooltip" data-placement="top" title="Verified user"></h6>';
                            html += '</a>';
                            html += '<small class="d-block">' + full.email + ' </small>';
                            html += '</div>';
                            html += '</div>';

                            return html;
                        }
                    },
                    {
                        "data": 1,
                        "render": function (data, type, full, meta) {
                            var html = '';
                           
                            if (full.status == 1) {
                                html += '<div class="alert alert-soft-secondary" role="alert">Не подтвержден</div>'
                            }
                            if (full.status == 2) {
                                html += '<div class="alert alert-soft-warning" role="alert">Ожидание подтверждения</div>'
                            }
                            if (full.status == 3) {
                                html += '<div class="alert alert-soft-success" role="alert">Подтвержден</div>'
                            }
                            if (full.status == 4) {
                                html += '<div class="alert alert-soft-danger" role="alert">Отказано</div>'
                            }
                            return html;
                        }
                    }
                ]
            });

            table
                .on('preDraw', function () {
                    $("#tableBox .spinner").show();
                })
                .on('draw.dt', function () {
                    $("#tableBox .spinner").hide();
                });

            $("#statusDD").change(function () {
                table.draw();
            });
        });
    </script>

    <script>
        // INITIALIZATION OF SELECT2
        // =======================================================
        $('.js-custom-select').each(function () {
            var select2 = $.HSCore.components.HSSelect2.init($(this));
        });
    </script>
}
