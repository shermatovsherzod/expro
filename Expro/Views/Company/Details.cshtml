                    @*<li class="nav-item active">
                        <a class="nav-link" href="#about-section">About</a>
                    </li>*@
                    @*<li class="nav-item">
                            <a class="nav-link" href="#jobs-section">Jobs <span class="badge badge-info badge-pill ml-1">+9</span></a>
                        </li>
