@{ 
    ViewData["Title"] = localizer["Error"];
    Layout = "_LayoutError";
}

<div class="container d-lg-flex align-items-lg-center min-vh-lg-100 space-4">
    <div class="w-lg-60 w-xl-50">
        <!-- Title -->
        <div class="mb-4">
            <img class="max-w-23rem mb-3" src="~/lib/frontTheme/svg/illustrations/error-number-404.svg" alt="SVG Illustration">
            <p class="lead">@localizer["LinkNotFoundMessage"]. @*Oops! Looks like you followed a bad link. <br> If you think this is a problem with us, please <a href="#">tell us.</a>*@</p>
        </div>
        <!-- End Title -->

        <a class="btn btn-wide btn-primary transition-3d-hover" href="/">@localizer["BackHome"]</a>
    </div>
</div>