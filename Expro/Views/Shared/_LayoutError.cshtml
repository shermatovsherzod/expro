<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Title -->
    <title>@ViewData["Title"] - Expro</title>

    <!-- Required Meta Tags Always Come First -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Favicon -->
    <link rel="shortcut icon" href="../favicon.ico">

    <!-- Font -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">

    <!-- CSS Implementing Plugins -->
    <link rel="stylesheet" href="~/lib/frontTheme/vendor/fontawesome/css/all.min.css">

    <!-- CSS Front Template -->
    @RenderSection("CustomFrontStyles", required: false)
    <link rel="stylesheet" href="~/lib/frontTheme/css/theme.min.css">
</head>
<body class="bg-img-hero-fixed" style="background-image: url(/lib/frontTheme/svg/illustrations/error-404.svg);">
    <style>
        .temporarily_hidden_item {
            display: none;
        }
    </style>

    <!-- ========== HEADER ========== -->
    <header id="header" class="header header-bg-transparent header-abs-top py-3">
        <div class="header-section">
            <div id="logoAndNav" class="container">
                <nav class="navbar">
                    <a class="navbar-brand" href="./index.html" aria-label="Front">
                        <img src="~/lib/frontTheme/svg/logos/logo.svg" alt="Logo">
                    </a>
                </nav>
            </div>
        </div>
    </header>
    <!-- ========== END HEADER ========== -->
    <!-- ========== MAIN CONTENT ========== -->
    <main id="content" role="main">
        <!-- Hero Section -->
        <div class="d-lg-flex">
            @RenderBody()
        </div>
        <!-- End Hero Section -->
    </main>
    <!-- ========== END MAIN CONTENT ========== -->
    <!-- ========== FOOTER ========== -->
    <footer class="position-absolute right-0 bottom-0 left-0">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center space-1">
                <!-- Copyright -->
                <p class="small text-muted mb-0">&copy; Expro @DateTime.Now.Year. @localizer["CopyRight"].</p>
                <!-- End Copyright -->
                <!-- Social Networks -->
                <ul class="list-inline mb-0">
                    <li class="list-inline-item">
                        <a class="btn btn-xs btn-icon btn-ghost-secondary" href="#">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                    </li>
                    <li class="list-inline-item">
                        <a class="btn btn-xs btn-icon btn-ghost-secondary" href="#">
                            <i class="fab fa-google"></i>
                        </a>
                    </li>
                    <li class="list-inline-item">
                        <a class="btn btn-xs btn-icon btn-ghost-secondary" href="#">
                            <i class="fab fa-twitter"></i>
                        </a>
                    </li>
                    <li class="list-inline-item">
                        <a class="btn btn-xs btn-icon btn-ghost-secondary" href="#">
                            <i class="fab fa-github"></i>
                        </a>
                    </li>
                </ul>
                <!-- End Social Networks -->
            </div>
        </div>
    </footer>
    <!-- ========== END FOOTER ========== -->
    
    <!-- JS Global Compulsory  -->
    <script src="~/lib/frontTheme/vendor/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/frontTheme/vendor/jquery-migrate/dist/jquery-migrate.min.js"></script>
    <script src="~/lib/frontTheme/vendor/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- JS Front -->
    <script src="~/lib/frontTheme/js/theme.min.js"></script>

    <!-- IE Support -->
    <script>
        if (/MSIE \d|Trident.*rv:/.test(navigator.userAgent)) document.write('<script src="/lib/frontTheme/vendor/babel-polyfill/dist/polyfill.js"><\/script>');
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>