@model UserVM
@{
    ViewData["Title"] = "UserProfile";

    <link href="~/css/userprofile.css" rel="stylesheet" />
}

<div class="container emp-profile">
    <form method="post">
        <div class="row">
            <div class="col-md-4">
                <div class="profile-img">
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS52y5aInsxSm31CvHOFHWujqUx_wWTS9iM6s7BAm21oEN_RiGoog" alt="" />
                    <div class="file btn btn-lg btn-primary">
                        Изменить
                        <input type="file" name="file" />
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="profile-head">
                    <h5>
                        @Model.FirstName @Model.LastName
                    </h5>
                    <h6>
                        Web Developer and Designer
                    </h6>
                    <p class="proile-rating">Рейтинг : <span>8/10</span></p>
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="main-tab" data-toggle="tab" href="#main" role="tab" aria-controls="main" aria-selected="true">Основное</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Контакты</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="education-tab" data-toggle="tab" href="#education" role="tab" aria-controls="education" aria-selected="false">Образование</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="workexperience-tab" data-toggle="tab" href="#workexperience" role="tab" aria-controls="workexperience" aria-selected="false">Опыт работы</a>
                        </li>

                    </ul>
                </div>
            </div>
            <div class="col-md-2">
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="profile-work">
                    <p>WORK LINK</p>
                    <a href="">Website Link</a><br />
                    <a href="">Bootsnipp Profile</a><br />
                    <a href="">Bootply Profile</a>
                    <p>SKILLS</p>
                    <a href="">Web Designer</a><br />
                    <a href="">Web Developer</a><br />
                    <a href="">WordPress</a><br />
                    <a href="">WooCommerce</a><br />
                    <a href="">PHP, .Net</a><br />
                </div>
            </div>
            <div class="col-md-8">
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="main" role="tabpanel" aria-labelledby="main-tab">
                        <div class="row">
                            <div class="col-md-6">
                                <label asp-for="@Model.FirstName"></label>
                            </div>
                            <div class="col-md-6">
                                <p>
                                    <input asp-for="@Model.FirstName" class="form-control" />
                                    <span asp-validation-for="@Model.FirstName"></span>
                                </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label asp-for="@Model.LastName"></label>
                            </div>
                            <div class="col-md-6">
                                <p>
                                    <input asp-for="@Model.LastName" class="form-control" />
                                    <span asp-validation-for="@Model.LastName"></span>
                                </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label asp-for="@Model.PatronymicName"></label>
                            </div>
                            <div class="col-md-6">
                                <p>
                                    <input asp-for="@Model.PatronymicName" class="form-control" />
                                    <span asp-validation-for="@Model.PatronymicName"></span>
                                </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label asp-for="@Model.RegionID"></label>
                            </div>
                            <div class="col-md-6">
                                <p>
                                    <select asp-for="@Model.RegionID"
                                            asp-items="@ViewData["regions"] as IEnumerable<SelectListItem>"
                                            class="form-control">
                                    </select>
                                    <span asp-validation-for="@Model.RegionID" class="text-danger"></span>
                                </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label asp-for="@Model.CityID"></label>
                            </div>
                            <div class="col-md-6">
                                <p>
                                    <select asp-for="@Model.CityID"
                                            asp-items="@ViewData["cities"] as IEnumerable<SelectListItem>"
                                            class="form-control">
                                        <option disabled>--- Выбрать город ---</option>
                                    </select>
                                    <span asp-validation-for="@Model.CityID" class="text-danger"></span>
                                </p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <label asp-for="@Model.DateOfBirth"></label>
                            </div>
                            <div class="col-md-6">
                                <p>
                                    <input asp-for="@Model.DateOfBirth" class="form-control" />
                                    <span asp-validation-for="@Model.DateOfBirth"></span>
                                </p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <label asp-for="@Model.Gender"></label>
                            </div>
                            <div class="col-md-6">
                                <p>
                                    <div class="radio">
                                        <input type="radio" name="userGender">Мужской&nbsp;&nbsp;&nbsp;
                                        <input type="radio" name="userGender">Женский
                                    </div>
                                </p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 text-right">
                                <button type="button" class="btn btn-primary">Сохранить</button>
                            </div>
                        </div>

                    </div>


                    <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                        <div class="row">
                            <div class="col-md-6">
                                <label asp-for="@Model.Email"></label>
                            </div>
                            <div class="col-md-6">
                                <p>
                                    <input asp-for="@Model.Email" class="form-control" />
                                    <span asp-validation-for="@Model.Email"></span>
                                </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label asp-for="@Model.PhoneNumber"></label>
                            </div>
                            <div class="col-md-6">
                                <p>
                                    <input asp-for="@Model.PhoneNumber" class="form-control" />
                                    <span asp-validation-for="@Model.PhoneNumber"></span>
                                </p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 text-right">
                                <button type="button" class="btn btn-primary">Сохранить</button>
                            </div>
                        </div>
                    </div>

                    <div class="tab-pane fade" id="education" role="tabpanel" aria-labelledby="contact-tab">
                        <div class="row">

                            <div class="col-md-12">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>
                                                Страна
                                            </th>
                                            <th>Город</th>
                                            <th>ВУЗ</th>
                                            <th>Факультет</th>
                                            <th>Год выпуска</th>
                                            <th>Действие</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Узбекистан</td>
                                            <td>Ташкент</td>
                                            <td>ТУИТ</td>
                                            <td>Дизайнер</td>
                                            <td>2005</td>
                                            <td>
                                                <button class="btn btn-danger">Удалить</button>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <hr />
                                <b>Добавить образование</b>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <label>Страна</label>
                            </div>
                            <div class="col-md-6">
                                <p>
                                    <select class="form-control" name="country" id="country">
                                        <option value="uzb">Узбекистан</option>
                                        <option value="rus">Россия</option>
                                        <option value="eng">Англия</option>
                                    </select>
                                </p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <label>Город</label>
                            </div>
                            <div class="col-md-6">
                                <p>
                                    <select class="form-control" name="city" id="city">
                                        <option value="uzb">Ташкент</option>
                                        <option value="rus">Москва</option>
                                        <option value="eng">Лондон</option>
                                    </select>
                                </p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <label>ВУЗ</label>
                            </div>
                            <div class="col-md-6">
                                <p>
                                    <select class="form-control" name="university" id="university">
                                        <option value="uzb">Ташкентский государственный юридический университет</option>
                                        <option value="rus">Московский государственный университет имени М.В.Ломоносова</option>
                                        <option value="eng">Вестминстерский Университет</option>
                                    </select>
                                </p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <label>Факультет</label>
                            </div>
                            <div class="col-md-6">
                                <p>
                                    <select class="form-control" name="faculty" id="faculty">
                                        <option value="uzb">Государственно-правовая деятельность</option>
                                        <option value="rus">Гражданско-правовая деятельность</option>
                                        <option value="eng">Международно-правовая деятельность</option>
                                    </select>
                                </p>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-md-6">
                                <label>Год выпуска</label>
                            </div>
                            <div class="col-md-6">
                                <p>
                                    <select class="form-control" name="graduationyear" id="graduationyear">
                                        <option value="uzb">2005</option>
                                        <option value="rus">2006</option>
                                        <option value="eng">2007</option>
                                    </select>
                                </p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 text-right">
                                <button type="button" class="btn btn-primary">Добавить</button>
                            </div>
                        </div>
                    </div>


                    <div class="tab-pane fade" id="workexperience" role="tabpanel" aria-labelledby="workexperience-tab">
                        <div class="row">

                            <div class="col-md-12">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Страна</th>
                                            <th>Город</th>
                                            <th>Место работы</th>
                                            <th>Должность</th>
                                            <th>Период</th>
                                            <th>Диплом</th>
                                            <th>Действие</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Узбекистан</td>
                                            <td>Ташкент</td>
                                            <td>ООО Legal law</td>
                                            <td>Юрист</td>
                                            <td>2005-2007</td>
                                            <td><button class="btn btn-info">Диплом</button></td>
                                            <td><button class="btn btn-danger">Удалить</button></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <hr />
                                <b>Добавить место работы</b>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <label>Страна</label>
                            </div>
                            <div class="col-md-6">
                                <p>
                                    <select class="form-control" name="workcountry" id="workcountry">
                                        <option value="uzb">Узбекистан</option>
                                        <option value="rus">Россия</option>
                                        <option value="eng">Англия</option>
                                    </select>
                                </p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <label>Город</label>
                            </div>
                            <div class="col-md-6">
                                <p>
                                    <select class="form-control" name="workcity" id="workcity">
                                        <option value="uzb">Ташкент</option>
                                        <option value="rus">Москва</option>
                                        <option value="eng">Лондон</option>
                                    </select>
                                </p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <label>Место работы</label>
                            </div>
                            <div class="col-md-6">
                                <p>
                                    <select class="form-control" name="university" id="university">
                                        <option value="1">ООО Legal law</option>
                                    </select>
                                </p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <label>Должность</label>
                            </div>
                            <div class="col-md-6">
                                <p>
                                    <input type="text" class="form-control" />                                   
                                </p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <label>Период</label>
                            </div>
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-6">С</div>
                                    <div class="col-md-6">
                                        <p>
                                            <input type="text" class="form-control" />
                                        </p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">По</div>
                                    <div class="col-md-6">
                                        <p>
                                            <input type="text" class="form-control" />
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-md-6">
                                <label>Год выпуска</label>
                            </div>
                            <div class="col-md-6">
                                <p>
                                    <select class="form-control" name="graduationyear" id="graduationyear">
                                        <option value="uzb">2005</option>
                                        <option value="rus">2006</option>
                                        <option value="eng">2007</option>
                                    </select>
                                </p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 text-right">
                                <button type="button" class="btn btn-primary">Добавить</button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-12 text-right">
                <button type="button" class="btn btn-success">Отправить заявку на подтверждение профайла</button>
            </div>

        </div>

    </form>
</div>


@section Scripts
{
    <script>
        $(document).ready(function () {
        });
    </script>
}